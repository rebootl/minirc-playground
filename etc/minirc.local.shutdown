#!/bin/bash
#
# /etc/minirc.local.shutdown: Local shutdown script.
# (copied from minirc.local, adapted)
#
##

echo_color() {
  color="$1"
  shift
  text="$@"
  printf "\033[1;3${color}m$text\033[00m\n"
}

# umount /tmp (first as in brebs)
echo_color 5 umount /tmp...
umount -r /tmp

# disable swap
echo_color 5 disable swap...
swapoff -a
